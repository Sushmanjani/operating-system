#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd;
    char write_buf[] = "Hello, this is a UNIX system call demo.\n";
    char read_buf[100];
    ssize_t bytes_read;

    // 1. Open or create file
    fd = open("demo.txt", O_CREAT | O_RDWR, 0644);
    if (fd < 0) {
        perror("Error opening file");
        return 1;
    }

    // 2. Write to file
    if (write(fd, write_buf, strlen(write_buf)) < 0) {
        perror("Error writing to file");
        close(fd);
        return 1;
    }

    // 3. Move file pointer to beginning
    if (lseek(fd, 0, SEEK_SET) < 0) {
        perror("Error seeking file");
        close(fd);
        return 1;
    }

    // 4. Read from file
    bytes_read = read(fd, read_buf, sizeof(read_buf) - 1);
    if (bytes_read < 0) {
        perror("Error reading file");
        close(fd);
        return 1;
    }

    read_buf[bytes_read] = '\0';  // Null terminate

    // 5. Display read content
    printf("Contents of file:\n%s", read_buf);

    // 6. Close file
    close(fd);

    return 0;
}
