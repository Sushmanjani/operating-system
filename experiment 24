#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    FILE *fp;
    char line[500];

    // Check argument count
    if (argc != 3) {
        printf("Usage: %s <pattern> <filename>\n", argv[0]);
        return 1;
    }

    char *pattern = argv[1];
    char *filename = argv[2];

    // Open file
    fp = fopen(filename, "r");
    if (fp == NULL) {
        perror("Error opening file");
        return 1;
    }

    printf("Searching for \"%s\" in %s:\n\n", pattern, filename);

    // Read line by line and search
    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern) != NULL) {  // pattern found
            printf("%s", line);
        }
    }

    fclose(fp);
    return 0;
}
